{
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "dist/",
        "target": "es2015",
        "rootDir": "./src/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types",
            "typing/index.d.ts"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "main": ["src/index", "core/index"],
            "@types": ["index"]
        }
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}